@model IEnumerable<testApp.Models.Post_tag_mix.Tag>

@{
    ViewData["Title"] = "GetTags";
}

<h1>GetTags</h1>

<p>
    <a asp-action="AddTag">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagName)
            </td>
            <td>
                
                <a asp-route-Id="@item.Id" asp-action="DeleteTag" class="btn btn-danger mx-2"
                   onclick="return confirm('Ya sure bro? You wanna delete this tagg?')">
                    <i class="far fa-trash-alt"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
