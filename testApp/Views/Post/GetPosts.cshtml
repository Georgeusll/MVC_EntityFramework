@model IEnumerable<testApp.Models.Post_tag_mix.Post>

@{
    ViewData["Title"] = "GetPosts";
}

<h1>GetPosts</h1>

<p>
    <a asp-action="AddPost">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <a asp-action="UpdatePost" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="GetPostDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-route-Id="@item.Id" asp-action="DeletePost" class="btn btn-danger mx-2"
                   onclick="return confirm('are you sure you want to delete this post from the list?')">
                    <i class="far fa-trash-alt"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
